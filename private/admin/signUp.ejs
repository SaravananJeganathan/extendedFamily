<% layout('layout') -%>

<form name="formUserDetail" ng-controller='userCtrl'>
    <table width="100%" cellpadding="0" cellspacing="0" border="0" class="popupTable">
        <tr>
            <td><label for="designation">I Am a *</label></td>
            <td>
            <input type="radio" name="Donor" value="Donor" ng-model="addUser.designation" required> Donor
            <input type="radio" name="Beneficiary" value="Beneficiary" ng-model="addUser.designation" required> Beneficiary
                <br />
                <span class="text-danger" ng-show="formUserDetail.designation.$error.required">UserId is required</span>
            </td>
        </tr>
        <tr>
            <td><label for="UserId">UserId *</label></td>
            <td>
                <input name="userId" class="popupInput" type="text" ng-model="addUser.userId" placeholder="UserId" ng-maxlength="50"
                        ng-pattern="/^[a-zA-Z0-9\s]*$/" required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.userId.$error.required">UserId is required</span>
                <span class="text-danger" ng-show="(formUserDetail.userId.$error.maxlength) ">UserId should be 50 Character</span>
                <span class="text-danger" ng-show="formUserDetail.userId.$error.pattern">No special characters are allowed.</span>
            </td>
        </tr>
        <tr>
            <td><label for="firstName">FirstName *</label></td>
            <td>
                <input name="firstName" class="popupInput" type="text" ng-model="addUser.firstName" placeholder="FirstName" 
                ng-maxlength="20" required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.firstName.$error.required">FirstName is required</span>
                <span class="text-danger" ng-show="(formUserDetail.firstName.$error.maxlength) ">FirstName should be 20 Character</span>
            </td>
        </tr>
        <tr>
            <td><label for="lastName">LastName *</label></td>
            <td>
                <input name="lastName" class="popupInput" type="text" ng-model="addUser.lastName" placeholder="LastName" 
                ng-maxlength="20" required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.lastName.$error.required">LastName is required</span>
                <span class="text-danger" ng-show="(formUserDetail.lastName.$error.maxlength)">LastName should be 20 Character</span>
            </td>
        </tr>
        
        <tr>
            <td><label for="email">Email *</label></td>
            <td>
                <input name="email" class="popupInput" type="email" ng-model="addUser.email" placeholder="Email" ng-maxlength="50"
                        required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.email.$error.required">Email is required</span>
                <span class="text-danger" ng-show="(formUserDetail.email.$error.maxlength) ">Email should be 50 Character</span>
                <span class="text-danger" ng-show="formUserDetail.email.$error.email">in valid email.</span>
            </td>
        </tr>
        
        <tr>
            <td><label for="phoneNo">Phone No *</label></td>
            <td>
                <input id="phoneNo" name="phoneNo" class="popupInput" type="text" ng-model="addUser.phoneNo" placeholder="Phone No" maxlength="10"
                        ng-pattern="/^\d{10}$/" required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.phoneNo.$error.required">PhoneNo is required</span>
                <span class="text-danger" ng-show="formUserDetail.phoneNo.$error.pattern">Invalid PhoneNo.</span>
            </td>
        </tr>
        <tr>
            <td><label for="country">Country *</label></td>
            <td>
                <select name="country" class="popupInput" ng-model="addUser.country" ng-options="item.name for item in country" 
                    ng-change="onCountryChange(addUser.country)" required>
                    <option value="" label="Select country"></option>
                </select>
                <br />
                <span class="text-danger" ng-show="formUserDetail.country.$error.required">Country is required</span>
            </td>
        </tr>
        
        <tr>
            <td><label for="state">State *</label></td>
            <td>
                <select name="state" class="popupInput"  ng-model="addUser.state" ng-options="item.name for item in states" 
                    ng-change="onStateChange(addUser.state)" required>
                    <option value="" label="Select state"></option>
                </select>
                <br />
                <span class="text-danger" ng-show="formUserDetail.state.$error.required">State is required</span>
            </td>
        </tr>
        
        <tr>
            <td><label for="city">City *</label></td>
            <td>
                <select name="city" class="popupInput"  ng-model="addUser.city" ng-options="item.name for item in cities" 
                    required>
                    <option value="" label="Select city"></option>
                </select>
                <br />
                <span class="text-danger" ng-show="formUserDetail.city.$error.required">City is required</span>
            </td>
        </tr>
        
         <tr>
            <td><label for="zip">Zip *</label></td>
            <td>
                <input name="zip" class="popupInput" type="text" ng-model="addUser.zip" placeholder="Zip" ng-maxlength="10"
                        required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.zip.$error.required">Zip is required</span>
                <span class="text-danger" ng-show="(formUserDetail.zip.$error.maxlength)">Zip should be 10 Character</span>
            </td>
        </tr>
        <tr>
            <td><label for="password">Password *</label></td>
            <td>
                <input name="password" class="popupInput" type="password" ng-model="addUser.password" placeholder="password" 
                ng-maxlength="20" ng-minlength="5" required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.password.$error.required">Password is required</span>
                <span class="text-danger" ng-show="formUserDetail.password.$error.maxlength">Too Long.</span>
                <span class="text-danger" ng-show="formUserDetail.password.$error.minlength">Too Sort.</span>
            </td>
        </tr>
        
        <tr>
            <td><label for="confirmPassword">Confirm Password *</label></td>
            <td>
                <input name="confirmPassword" class="popupInput" type="password" ng-model="addUser.confirmPassword" placeholder="confirmPassword"
                       ng-match="addUser.password" required />
                <br />
                <span class="text-danger" ng-show="formUserDetail.confirmPassword.$error.required">Confirm Password is required</span>
                <span class="text-danger" ng-show="formUserDetail.confirmPassword.$error.match"> password do not match.</span>
            </td>
        </tr>

        <tr>
            <td align="center" colspan="4">
                <span class="text-danger Indicates" for="inputName"> * Indicates Mandatory fields</span>
                <button class="btn btn-primary" type="button" id="saveReqDetail" ng-click="addUser(formUserDetail)"
                        ng-disabled="isDisabled">
                    Update
                </button>
            </td>
        </tr>
    </table>
</form>